    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "48.0.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "image-size": "1.0.2",
    "is-ci": "3.0.1",
    "open": "8.4.1",
    "jest": "29.6.1",
    "prettier": "3.0.0",
    "simple-git": "3.19.0",
    "targz": "1.0.1"
